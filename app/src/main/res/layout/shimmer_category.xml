<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools">

    <com.google.android.material.card.MaterialCardView
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_width="0dp"
        app:layout_constraintWidth_default="percent"
        app:layout_constraintWidth_percent=".48"
        android:layout_marginStart="@dimen/_5sdp"
        android:layout_marginEnd="@dimen/_5sdp"
        android:layout_marginTop="@dimen/_5sdp"
        android:layout_marginBottom="@dimen/_5sdp"
        android:theme="@style/Theme.MaterialComponents.DayNight.NoActionBar"
        app:cardBackgroundColor="@color/colorBlue"

        android:layout_height="wrap_content"
        card_view:cardCornerRadius="@dimen/_5sdp"
        card_view:cardElevation="0dp"
        app:cardElevation="0dp"
        card_view:contentPadding="0dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#1AFFFFFF">

            <TextView
                android:id="@+id/tv_category_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_16sdp"
                android:layout_marginEnd="@dimen/_16sdp"
                android:layout_marginTop="@dimen/_12sdp"
                android:text=""
                android:maxLines="1"
                android:textSize="10sp"
                android:background="@color/colorBlue"
                android:textColor="@color/colorWhite"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tv_desc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_category_name"
                android:lineSpacingExtra="0sp"
                android:maxLines="5"
                android:minLines="5"
                android:ellipsize="end"
                android:background="@color/colorBlue"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_marginEnd="@dimen/_20sdp"
                android:layout_marginStart="@dimen/_16sdp"
                android:paddingBottom="@dimen/_16sdp"
                android:textColor="@color/colorGrey"
                android:textSize="10sp"
                app:layout_constraintEnd_toEndOf="@+id/tv_category_name"
                app:layout_constraintStart_toStartOf="@+id/tv_category_name"
                app:layout_constraintTop_toBottomOf="@+id/tv_no_of_chapters" />

            <TextView
                android:id="@+id/tv_no_of_chapters"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_2sdp"
                android:layout_below="@+id/tv_category_name"
                android:gravity="start"
                android:lineSpacingExtra="0sp"
                android:background="@color/colorBlue"
                android:minLines="1"
                android:minWidth="@dimen/_80sdp"
                android:textStyle="bold"
                android:text=""
                android:textColor="@color/colorLightBlue"
                android:textSize="10sp"
                app:layout_constraintStart_toStartOf="@+id/tv_category_name"
                app:layout_constraintTop_toBottomOf="@+id/tv_category_name" />

            <ImageView
                android:id="@+id/iv_favourite"
                android:layout_width="@dimen/_12sdp"
                android:layout_height="@dimen/_12sdp"
                android:layout_marginBottom="@dimen/_12sdp"
                android:background="@color/colorBlue"
                android:layout_marginTop="@dimen/_5sdp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="@+id/tv_desc"
                app:layout_constraintTop_toBottomOf="@+id/tv_desc" />

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/ic_right_cut"
                app:layout_constraintBottom_toBottomOf="@+id/tv_category_name"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/tv_category_name" />

            <ImageView
                android:id="@+id/imageView3"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_width="@dimen/_10sdp"
                android:layout_height="@dimen/_5sdp"
                android:background="@color/colorBlue"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_category_name" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.google.android.material.card.MaterialCardView>


    <com.google.android.material.card.MaterialCardView
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_width="0dp"
        android:layout_marginTop="@dimen/_5sdp"
        app:layout_constraintWidth_default="percent"
        app:layout_constraintWidth_percent=".48"
        android:layout_marginStart="@dimen/_5sdp"
        android:layout_marginEnd="@dimen/_5sdp"
        android:layout_marginBottom="@dimen/_5sdp"
        android:theme="@style/Theme.MaterialComponents.DayNight.NoActionBar"
        app:cardBackgroundColor="@color/colorBlue"

        android:layout_height="wrap_content"
        card_view:cardCornerRadius="@dimen/_5sdp"
        card_view:cardElevation="0dp"
        app:cardElevation="0dp"
        card_view:contentPadding="0dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#1AFFFFFF">

            <TextView
                android:id="@+id/tv_category_name_"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_16sdp"
                android:layout_marginEnd="@dimen/_16sdp"
                android:layout_marginTop="@dimen/_12sdp"
                android:text=""
                android:maxLines="1"
                android:textSize="10sp"
                android:background="@color/colorBlue"
                android:textColor="@color/colorWhite"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tv_desc_"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_category_name_"
                android:lineSpacingExtra="0sp"
                android:maxLines="5"
                android:minLines="5"
                android:ellipsize="end"
                android:background="@color/colorBlue"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_marginEnd="@dimen/_20sdp"
                android:layout_marginStart="@dimen/_16sdp"
                android:paddingBottom="@dimen/_16sdp"
                android:textColor="@color/colorGrey"
                android:textSize="10sp"
                app:layout_constraintEnd_toEndOf="@+id/tv_category_name_"
                app:layout_constraintStart_toStartOf="@+id/tv_category_name_"
                app:layout_constraintTop_toBottomOf="@+id/tv_no_of_chapters_" />

            <TextView
                android:id="@+id/tv_no_of_chapters_"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_2sdp"
                android:layout_below="@+id/tv_category_name_"
                android:gravity="start"
                android:lineSpacingExtra="0sp"
                android:background="@color/colorBlue"
                android:minLines="1"
                android:minWidth="@dimen/_80sdp"
                android:textStyle="bold"
                android:text=""
                android:textColor="@color/colorLightBlue"
                android:textSize="10sp"
                app:layout_constraintStart_toStartOf="@+id/tv_category_name_"
                app:layout_constraintTop_toBottomOf="@+id/tv_category_name_" />

            <ImageView
                android:id="@+id/iv_favourite_"
                android:layout_width="@dimen/_12sdp"
                android:layout_height="@dimen/_12sdp"
                android:layout_marginBottom="@dimen/_12sdp"
                android:background="@color/colorBlue"
                android:layout_marginTop="@dimen/_5sdp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="@+id/tv_desc_"
                app:layout_constraintTop_toBottomOf="@+id/tv_desc_" />

            <ImageView
                android:id="@+id/imageView2_"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/ic_right_cut"
                app:layout_constraintBottom_toBottomOf="@+id/tv_category_name_"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/tv_category_name_" />

            <ImageView
                android:id="@+id/imageView3_"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_width="@dimen/_10sdp"
                android:layout_height="@dimen/_5sdp"
                android:background="@color/colorBlue"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_category_name_" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.google.android.material.card.MaterialCardView>












</androidx.constraintlayout.widget.ConstraintLayout>


